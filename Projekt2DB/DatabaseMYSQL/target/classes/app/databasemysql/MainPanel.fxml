<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" prefHeight="720.0" prefWidth="1280.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.databasemysql.MainPanel">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <BorderPane>
        <center>
            <TableView fx:id="data">
                <columns>
                    <TableColumn text="A" />
                    <TableColumn text="B" />
                    <TableColumn text="C" />
                    <TableColumn text="D" />
                </columns>
            </TableView>
        </center>
        <top>
            <HBox spacing="10">
                <ComboBox fx:id="JCBTable" prefHeight="25.0" prefWidth="371.0" />
                <!-- Setup-Button für 'Add' -->
                <Button fx:id="addButton" onAction="#openDialog" text="+" />
                <!-- Setup-Button für 'Delete' -->
                <Button fx:id="deleteButton" text="-" />
                <!-- Setup-Button für 'Edit' -->
                <Button fx:id="editButton" text="E" />
                <!-- Setup-Button für 'Filter' -->
                <Button fx:id="filterButton" text="F" />
                <!-- Setup-Button für 'Join' -->
                <Button fx:id="joinButton" text="J" />
                <!-- Setup-Button für 'Execute' -->
                <Button fx:id="executeButton" text="sql" />
                <!-- Setup-Button für 'CT' -->
                <Button fx:id="ctButton" text="CT" />
                <!-- Setup-Button für 'DT' -->
                <Button fx:id="dtButton" text="DT" />
            </HBox>
        </top>
    </BorderPane>

</VBox>
